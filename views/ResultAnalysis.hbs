<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="icon" sizes="512x512" href="img/calculator.png" />
  	<link rel="stylesheet" href="css/bootstrap.min.css" />
  	<link href="css/font-awesome.min.css" rel="stylesheet" />
  	<link href="css/style.css" rel="stylesheet" />
    <link href="css/ResultAnalysis.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
  </head>
  <body>
    <div class="container-xl">
      <h1><b>EXAM RESULT ANALYSIS</b></h1>

    </div>
    <div class="header">
  		<h2>Result Analysis</h2>
          <div class="header-message-container">
            <form action="/analyzeResult" method="POST" class="header-message-container">
      					<div class="header-message">
      						<select id="exam-id" class="form-control form-control-sm">
      							<option value="non" selected="selected">Select examination</option>
      							<option value="23" >Nov/Dec 2020 Semester Examination</option>
      						</select>
      					</div>
      					<div class="header-message">
      						<input name="yourRegNo" id="registration-number" class="form-control form-control-sm"
      							placeholder="Enter Your registration number" />
      					</div>
                <div class="header-message">
                  <input name="friendsRegNo" id="registration-number" class="form-control form-control-sm"
                    placeholder="Enter Friends registration number" />
                </div>
      					<div class="header-message">
      						<button id="calculate-button" class="btn btn-sm btn-success">
      							SUBMIT
      						</button>
      					</div>
              </form>
      			</div>
          </div>
          <canvas id="myChart" style="width:100%;max-width:100%;"></canvas>
      </body>
      <script>
        var xlabels = ["OPERATING SYSTEMS","COMPUTER NETWORKS I","SOFTWARE ENGINEERING","Probability Stattistics and Stochastic Processes","ADVANCE WEB TECHNOLOGIES (ELECTIVE II)","ARTIFICIAL NEURAL NETWORKS (ELECTIVE III)","OPERATING SYSTEMS LAB","SOFTWARE ENGINEERING AND OBJECT ORIENTED ANALYSIS LAB","SCRIPTING LANGUAGE LAB","INDUSTRIAL TRAINING I"];
        new Chart("myChart", {
        type: "line",
        data: {
          labels: xlabels,
          datasets: [{ 
            label: "Your Result",
            data: [{{yourResult}}],
            borderColor: "red",
            fill: false
          }, { 
            label: "Friend's Result", 
            data: [{{friendsResult}}],
            borderColor: "green",
            fill: false
          }]
        },
        options: {
          legend: {display: false}
        }
      });
    </script>
  </script>
  </html>
